{
  "name": "minimalist-editor",
  "version": "1.0.0",
  "description": "Distraction-free writing with inline outline, focus mode, and clean UI options. Features a Notion-style hover-to-expand table of contents, line-by-line focus dimming, and the ability to hide properties and scrollbars.",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production"
  },
  "keywords": [
    "obsidian",
    "outline",
    "navigation",
    "notion"
  ],
  "author": "litegral",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@typescript-eslint/parser": "^8.53.1",
    "builtin-modules": "^3.3.0",
    "esbuild": "0.17.3",
    "eslint": "^9.39.2",
    "eslint-plugin-obsidianmd": "^0.1.9",
    "globals": "^17.0.0",
    "obsidian": "latest",
    "tslib": "2.6.2",
    "typescript": "5.3.3"
  }
}
